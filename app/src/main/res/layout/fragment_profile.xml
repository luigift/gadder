<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/profileLayout"
    tools:context=".ProfileFragment">

    <android.support.v7.widget.CardView
        app:cardCornerRadius="30dp"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_margin="32dp"
        android:layout_height="wrap_content"
        android:id="@+id/cardView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageButton
                android:src="@drawable/ic_settings_white_24dp"
                android:tint="#30000000"
                android:layout_margin="16dp"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/floatingProfileName"
                android:text="Luigi Tedesco"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_marginTop="64dp"
                android:layout_marginBottom="16dp"
                android:layout_centerHorizontal="true"/>

            <View
                android:id="@+id/floatingHorizontalBar"
                android:layout_alignBottom="@id/floatingProfileName"
                android:background="#30000000"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_below="@+id/floatingProfileName"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <ImageButton
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_lock_black_24dp"
                    android:tint="@color/colorAccent"
                    android:background="@android:color/transparent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <ImageButton
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_music_note_black_24dp"
                    android:tint="@color/colorAccent"
                    android:background="@android:color/transparent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <ImageButton
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/ic_place_black_24dp"
                    android:tint="@color/colorAccent"
                    android:background="@android:color/transparent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/floatingProfileImage"
        android:translationZ="4dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@android:color/white"
        app:civ_border_width="5dp"
        app:civ_border_color="@color/colorAccent"
        android:layout_marginTop="83dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp" />

    <Button
        android:id="@+id/send"
        android:text="logout"
        android:backgroundTint="@android:color/holo_red_dark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/token"
        android:text="send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_marginBottom="47dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
